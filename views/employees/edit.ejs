<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form" method="post" action="/employees/update/<%= employee.id %>" id="edit_user">
            <h2>Edit Employee...</h2>
                <% if(flash && flash.err) { %>
                    <ul class="alert alert-success">
                <% Object.keys(flash.err).forEach(function(error) { %>
                    <li><%- JSON.stringify(flash.err[error]) %></li>
                <% }) %>
                </ul>
                <% } %>

            <hr class="colorgraph">
                    <div class="form-group">
                        <input type="text" name="name" id="name" class="form-control input-lg" tabindex="1" value="<%= employee.name %>">
                    </div>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="age" id="age" class="form-control input-lg" tabindex="2" value="<%= employee.age %>">
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="basic" id="basic" class="form-control input-lg" tabindex="3" value="<%= employee.basic %>">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="email" name="email" id="email" class="form-control input-lg" tabindex="4" value="<%= employee.email %>">
            </div>
              <div class="form-group">
                <input type="text" name="mobile" id="mobile" class="form-control input-lg" tabindex="5" value="<%= employee.mobile %>">
            </div>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-6 col-md-6"><input type="submit" value="Update" class="btn btn-primary btn-block btn-lg" tabindex="6">  <input type="hidden" name="_csrf" value="<%= _csrf%>"></div>

                <div class="col-xs-6 col-md-6"><input type="reset" value="Reset"  class="btn btn-reset btn-block btn-lg"></div>
            </div>

        </form>
    </div>
</div>

</div>

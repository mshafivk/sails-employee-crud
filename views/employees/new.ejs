<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form" method="post" action="/employees/create" id="create_user">
            <h2>Add Employee</h2>
                <% if(flash && flash.err) { %>
                    <ul class="alert alert-success">
                <% Object.keys(flash.err).forEach(function(error) { %>
                    <li><%- JSON.stringify(flash.err[error]) %></li>
                <% }) %>
                </ul>
                <% } %>

            <hr class="colorgraph">

              <!--  <div class="col-xs-6 col-sm-6 col-md-6">-->
                    <div class="form-group">
                        <input type="text" name="name" id="name" class="form-control input-lg" placeholder="Full Name" tabindex="1">
                    </div>
           <!--     </div>-->
    <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="age" id="age" class="form-control input-lg" placeholder="Age" tabindex="2">
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="basic" id="basic" class="form-control input-lg" placeholder="Basic Salary" tabindex="3">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address" tabindex="4">
            </div>
              <div class="form-group">
                <input type="text" name="mobile" id="mobile" class="form-control input-lg" placeholder="Mobile Number" tabindex="5">
            </div>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-6 col-md-6"><input type="submit" value="Create" class="btn btn-primary btn-block btn-lg" tabindex="6">  <input type="hidden" name="_csrf" value="<%= _csrf%>"></div>

                <div class="col-xs-6 col-md-6"><input type="reset" value="Reset"  class="btn btn-reset btn-block btn-lg"></div>
            </div>

        </form>
    </div>
</div>

</div>
